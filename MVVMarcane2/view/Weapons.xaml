<UserControl x:Class="MVVMarcane2.view.Weapons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMarcane2.view"
             xmlns:vm="clr-namespace:MVVMarcane2.viewmodel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Border CornerRadius="0,20,20,0">

        </Border>

        <TextBlock 
            Text="ID Weapon  :"
            Foreground="#DBDBDB"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="72,146,0,0" />

        <TextBlock 
            Text="{Binding WeaponID}"
            Foreground="#CED565"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="198,148,0,0" RenderTransformOrigin="0.55,2.719" />

        <TextBlock 
            Text="Name  :"
            Foreground="#DBDBDB"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="72,205,0,0" RenderTransformOrigin="0.517,3.333" />

        <TextBlock 
            Text="{Binding WeaponName}"
            Foreground="#CED565"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="198,205,0,0" RenderTransformOrigin="0.55,2.719" />

        <TextBlock 
            Text="Power  :"
            Foreground="#DBDBDB"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="72,266,0,0" />

        <TextBlock 
            Text="{Binding WeaponPower}"
            Foreground="#c61a09"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="/Fonts/#Rubik Medium"
            Margin="198,266,0,0" RenderTransformOrigin="0.55,2.719" />

        <TextBlock 
            Text="Type  :"
            Foreground="#DBDBDB"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="72,320,0,0" />

        <TextBlock 
            Text="{Binding WeaponType}"
            Foreground="#CED565"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="198,320,0,0" RenderTransformOrigin="0.55,2.719" />

    </Grid>
</UserControl>
