<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style 
        x:Key="Image_Style"
        TargetType="Image">

        <Setter 
            Property="HorizontalAlignment"
            Value="Left" />
        <Setter 
            Property="VerticalAlignment"
            Value="Center" />
        <Setter 
            Property="Stretch"
            Value="Uniform" />
        <Setter 
            Property="Height"
            Value="20" />
        <Setter 
            Property="Width"
            Value="20" />
        <Setter 
            Property="Margin"
            Value="5,0,0,0" />

    </Style>


</ResourceDictionary>